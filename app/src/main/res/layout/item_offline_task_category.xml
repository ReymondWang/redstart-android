<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ui_table_row_height"
    android:background="@drawable/bg_clickable_row">

    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:textSize="@dimen/common_font_big"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_font_middle"/>

    <TextView
        android:id="@+id/txtCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_spacing_big"
        android:layout_marginStart="@dimen/common_spacing_big"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@drawable/red_circle"/>

    <ImageView
        android:layout_width="@dimen/ui_row_arrow_size"
        android:layout_height="@dimen/ui_row_arrow_size"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="@string/common_image_description"/>

</LinearLayout>