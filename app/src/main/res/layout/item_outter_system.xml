<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ui_table_row_height"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txtSystemName"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginLeft="@dimen/common_spacing_big"
        android:layout_marginStart="@dimen/common_spacing_big"
        android:textSize="@dimen/common_font_big"/>

    <TextView
        android:id="@+id/txtBind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_font_middle"
        android:textColor="@color/colorGray"/>
    
    <ImageView
        android:layout_width="@dimen/ui_row_arrow_size"
        android:layout_height="@dimen/ui_row_arrow_size"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="@string/common_image_description"/>

</LinearLayout>