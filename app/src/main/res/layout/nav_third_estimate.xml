<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_spacing_big"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_marginTop="20dip"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_spacing_xbig"
        android:paddingRight="@dimen/common_spacing_xbig"
        android:textColor="@color/colorLightBlack"
        android:textSize="@dimen/common_font_big"
        android:text="@string/search_title"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_spacing_xsmall"
        android:background="@color/colorGray">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_table_row_height"
        android:layout_marginLeft="@dimen/common_spacing_xbig"
        android:layout_marginRight="@dimen/common_spacing_xbig"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:textSize="@dimen/common_font_big"
            android:gravity="center_vertical"
            android:text="@string/estimate_item_category"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginLeft="@dimen/common_spacing_big"
            android:layout_marginStart="@dimen/common_spacing_big"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chkGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estimate_item_category_general"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chkImportant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estimate_item_category_important"/>

        </LinearLayout>

    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/txtArea"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_table_row_height"
        android:layout_marginLeft="@dimen/common_spacing_xbig"
        android:layout_marginRight="@dimen/common_spacing_xbig"
        android:textSize="@dimen/common_font_big"
        android:hint="@string/estimate_item_area"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true" />

    <AutoCompleteTextView
        android:id="@+id/txtProject"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_table_row_height"
        android:layout_marginLeft="@dimen/common_spacing_xbig"
        android:layout_marginRight="@dimen/common_spacing_xbig"
        android:textSize="@dimen/common_font_big"
        android:hint="@string/estimate_item_project"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true" />

    <AutoCompleteTextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_table_row_height"
        android:layout_marginLeft="@dimen/common_spacing_xbig"
        android:layout_marginRight="@dimen/common_spacing_xbig"
        android:textSize="@dimen/common_font_big"
        android:hint="@string/estimate_item_description"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_spacing_xbig"
        android:layout_marginStart="@dimen/common_spacing_xbig"
        android:layout_marginRight="@dimen/common_spacing_xbig"
        android:layout_marginEnd="@dimen/common_spacing_xbig"
        android:layout_marginTop="@dimen/common_spacing_xlarge"
        android:background="@drawable/bg_button_corner"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/common_font_big"
        android:text="@string/action_search"/>

</LinearLayout>