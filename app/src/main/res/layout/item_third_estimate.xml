<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="0dip"
    app:cardElevation="@dimen/common_spacing_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_spacing_big"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/txtCharacter"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="end"
                android:textColor="@color/colorDanger"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtAreaAndProject"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/common_spacing_middle"/>

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spacing_middle"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/common_font_middle"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spacing_middle">

            <LinearLayout
                android:id="@+id/lytImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/txtImprovementTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_font_middle"
            android:visibility="gone"
            android:text="@string/estimate_item_submit"/>

        <TextView
            android:id="@+id/txtImprovementAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spacing_middle"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/common_font_middle"/>

        <HorizontalScrollView
            android:id="@+id/lytFixedImageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spacing_middle"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/lytFixedImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_marginTop="@dimen/common_spacing_big"
            android:gravity="end"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chkSelect"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="@dimen/common_spacing_xbig"
                android:layout_marginEnd="@dimen/common_spacing_xbig"/>

            <ImageView
                android:id="@+id/btnUpload"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:layout_marginRight="@dimen/common_spacing_xbig"
                android:layout_marginEnd="@dimen/common_spacing_xbig"
                android:src="@drawable/ic_cloud_upload_primary"
                android:contentDescription="@string/common_image_description"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/btnDownload"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:layout_marginRight="@dimen/common_spacing_xbig"
                android:layout_marginEnd="@dimen/common_spacing_xbig"
                android:src="@drawable/ic_cloud_download"
                android:contentDescription="@string/common_image_description"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/btnCreate"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:layout_marginRight="@dimen/common_spacing_big"
                android:layout_marginEnd="@dimen/common_spacing_big"
                android:src="@drawable/ic_create"
                android:contentDescription="@string/common_image_description"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:layout_marginRight="@dimen/common_spacing_big"
                android:layout_marginEnd="@dimen/common_spacing_big"
                android:src="@drawable/ic_delete_forever"
                android:contentDescription="@string/common_image_description"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>