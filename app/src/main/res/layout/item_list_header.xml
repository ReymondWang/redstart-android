<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing_xbig"
        android:layout_marginBottom="@dimen/common_spacing_middle"
        android:layout_marginLeft="@dimen/common_spacing_xbig"
        android:layout_marginStart="@dimen/common_spacing_xbig"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/common_font_middle"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_spacing_small"
        android:background="@color/colorGray"/>

</LinearLayout>