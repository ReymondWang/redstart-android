<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_spacing_big"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtProject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"/>

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="end"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spacing_middle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spacing_middle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBuilding"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"/>

            <TextView
                android:id="@+id/txtCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytCheckItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/lytImageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spacing_middle">

            <LinearLayout
                android:id="@+id/lytImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spacing_middle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCheckDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"/>

            <TextView
                android:id="@+id/txtCheckPerson"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_marginTop="@dimen/common_spacing_big"
            android:gravity="end"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chkSelect"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="@dimen/common_spacing_xbig"
                android:layout_marginEnd="@dimen/common_spacing_xbig"/>

            <ImageView
                android:id="@+id/btnUpload"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:layout_marginRight="@dimen/common_spacing_xbig"
                android:layout_marginEnd="@dimen/common_spacing_xbig"
                android:src="@drawable/ic_cloud_upload_primary"
                android:contentDescription="@string/common_image_description"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/btnDownload"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:layout_marginRight="@dimen/common_spacing_xbig"
                android:layout_marginEnd="@dimen/common_spacing_xbig"
                android:src="@drawable/ic_cloud_download"
                android:contentDescription="@string/common_image_description"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/btnCreate"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:layout_marginRight="@dimen/common_spacing_big"
                android:layout_marginEnd="@dimen/common_spacing_big"
                android:src="@drawable/ic_create"
                android:contentDescription="@string/common_image_description"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:layout_marginRight="@dimen/common_spacing_big"
                android:layout_marginEnd="@dimen/common_spacing_big"
                android:src="@drawable/ic_delete_forever"
                android:contentDescription="@string/common_image_description"
                android:visibility="gone"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>