            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_passport_upload"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PassportModifyActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_passport_upload_modify"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PassportTypeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_passport_type"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ModifyPasswordActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_modify_password"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ZoomImageViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FeedbackActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_feedback"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NotificationActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_setting"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OfflineTaskCategoryActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_offline"
            android:screenOrientation="portrait" />

        <!-- 数据库Provider -->
        <provider
            android:name=".provider.SystemUserProvider"
            android:authorities="com.purplelight.redstar.provider.RedStartProvider.SystemUser"
            android:exported="false" />
        <provider
            android:name=".provider.AppFuncProvider"
            android:authorities="com.purplelight.redstar.provider.RedStartProvider.AppFunc"
            android:exported="false" />
        <provider
            android:name=".provider.EstimateReportProvider"
            android:authorities="com.purplelight.redstar.provider.RedStartProvider.EstimateReport"
            android:exported="false" />
        <provider
            android:name=".provider.EstimateItemProvider"
            android:authorities="com.purplelight.redstar.provider.RedStartProvider.EstimateItem"
            android:exported="false" />
        <provider
            android:name=".provider.SpecialCheckItemProvider"
            android:authorities="com.purplelight.redstar.provider.RedStartProvider.SpecialCheckItem"
            android:exported="false" />

        <!-- 后台任务 -->
        <service
            android:name=".service.EstimateDownloadService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".service.EstimateUploadService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".service.SpecialItemDownloadService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>